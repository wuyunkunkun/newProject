<script type="text/javascript">
function myfun(){
	var prompt="${prompt }";
	
	if(prompt=="false"){
		alert("当前试题在试卷当中有记录，请先删除试卷！");
	}
}
window.onload = myfun;

	function sousuo(){
		var p=$("#searchParam").val();
		window.location.href="${ctx }/chapter/list?searchparam="+p;
		$("[name='pagen']").each(function(key,value){
			$(this).attr("href",$(this).attr("href")+"&searchparam='"+p+"'");
		});
	}
	function pageSkip(){
		var action="${action}";
		if(action == "delete"){
			var listpage = document.getElementsByName("listpage");
			var listpageNum = document.getElementsByName("listpageNum");
			var pageNum = listpageNum[0].value;
			listpage[0].href = "${ctx }/chapter/list?pageNo="+pageNum+"&searchParam=${searchParam}";
		}else if(action == "select"){
			var editpage = document.getElementsByName("editpage");
			var editpageNum = document.getElementsByName("editpageNum");
			var pageNum = editpageNum[0].value;
			alert(pageNum);
			editpage[0].href = "${ctx }/chapter/list?pageNo="+pageNum+"&searchParam=${searchParam}";
		}else if(action == "edit"){
			var delpage = document.getElementsByName("delpage");
			var delpageNum = document.getElementsByName("delpageNum");
			var pageNum = delpageNum[0].value;
			alert(pageNum);
			delpage[0].href = "${ctx }/chapter/list?pageNo="+pageNum+"&searchParam=${searchParam}";
		}
	}
		
		function checkall(){
			var all=document.getElementsByName("all");
			if(all[0].checked == true){
				var one=document.getElementsByName("one");
				for(var j=0;j<one.length;j++){
					one[j].checked=true;
				//	alert(one[j].value);
				}
			}else{
				var one = document.getElementsByName("one");
				for(var j=0;j<one.length;j++){
					one[j].checked = false;
				}
			}		
		}
		
		function checkone(){
			var onebox = document.getElementsByName("one");
			var allbox = document.getElementsByName("all");
			var i = 0;
			for(var j=0;j<onebox.length;j++){
				if(onebox[j].checked == false){
					allbox[0].checked = false;
				}else{
					i = i+1;
				}
			}
			if(i == onebox.length){
				allbox[0].checked = true;
			}
		}
		
		function deleteall(){
			
			var alldelete = document.getElementsByName("all");
			var onedelete = document.getElementsByName("one");
			//var p=$("#searchParam").val();
			var value = "";
			var v = 0;
			var flag = false;
			
		    	if(alldelete[0].checked == true){
					for(var m=0;m<onedelete.length;m++){
						value += onedelete[m].value + ",";
						//alert(value[m]+"");
						flag=true;
						v++;
					}
				}else{
					//var n = 0;
					for(var m=0;m<onedelete.length;m++){
						if(onedelete[m].checked == true){
							value += onedelete[m].value + ",";
							//alert(value[m]);
							//n = n+1;
							flag=true;
							v++;
						}
					}
				}
		    	if(!flag){
		    		alert("你没有选中任何数据！");
		    		return false;
		    	}
		    	
		    	if(window.confirm("你确定删除 " + v + " 条数据吗？")){
		    		window.location.href="${ctx}/chapter/allDelete?idlist="+value;
		    	}else{
		    		return false;
		    	}
				
	        
			
		}
</script>

